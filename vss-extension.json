{
    "manifestVersion": 1,
    "id": "team-calendar",
    "version": "0.5.14",
    "publisher": "ms-devlabs",
    "name": "Team Calendar",
    "description": "Track events important to your team, view and manage days off, quickly see when sprints start and end, and more.",
    "public": true,
    "icons": {
        "default": "static/images/calendar-logo.png"
    },
    "tags": [
        "plan",
        "time",
        "calendar",
        "capacity"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scopes": [
        "vso.work_write",
        "vso.notification_publish"
    ],
    "categories": [
        "Plan and track"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "LICENSE.txt"
        }
    },
    "links": {
        "support": {
            "uri": "https://github.com/Microsoft/vsts-team-calendar/issues"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vsts-team-calendar"
    },
    "badges": [
        {
            "href": "https://github.com/Microsoft/vsts-team-calendar",
            "uri": "https://mseng.visualstudio.com/_apis/public/build/definitions/b924d696-3eae-4116-8443-9a18392d8544/2715/badge",
            "description": "Team Calendar CI build status"
        }
    ],
    "screenshots": [
        {
            "path": "static/images/calendar-screen-shot.png"
        }
    ],
    "files": [
        {
            "path": "static",
            "addressable": true
        },
        {
            "path": "dist",
            "addressable": true
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "dist/vss-web-extension-sdk"
        }
    ],
    "branding": {
        "color": "rgb(149, 37, 0)",
        "theme": "dark"
    },
    "contributions": [
        {
            "id": "calendar",
            "type": "ms.vss-web.hub",
            "description": "Calendar hub in the Home hub group.",
            "targets": [
                "ms.vss-web.home-hub-group"
            ],
            "properties": {
                "name": "Calendar",
                "order": 22,
                "uri": "static/calendar.html"
            }
        },
        {
            "id": "calendar-event-sources",
            "type": ".calendar-event-source-collection",
            "description": "Target for calendar event sources",
            "targets": [
                ".calendar"
            ]
        },
        {
            "id": "freeForm",
            "type": ".calendar-event-source",
            "description": "Calendar event source for free-form events. Enables users to add their own events to the calendar.",
            "targets": [
                ".calendar-event-sources"
            ],
            "properties": {
                "uri": "static/calendarServices.html"
            }
        },
        {
            "id": "add-freeform-control",
            "type": "ms.vss-web.control",
            "description": "",
            "targets": [
                ".calendar"
            ],
            "properties": {
                "uri": "static/freeFormControls.html"
            }
        },
        {
            "id": "daysOff",
            "type": ".calendar-event-source",
            "description": "Calendar event source for team and personal days off.",
            "targets": [
                ".calendar-event-sources"
            ],
            "properties": {
                "uri": "static/calendarServices.html"
            }
        },
        {
            "id": "add-daysoff-control",
            "type": "ms.vss-web.control",
            "description": "",
            "targets": [
                ".calendar"
            ],
            "properties": {
                "uri": "static/daysOffControls.html"
            }
        },
        {
            "id": "iterations",
            "type": ".calendar-event-source",
            "description": "Calendar event source for sprints/iterations.",
            "targets": [
                ".calendar-event-sources"
            ],
            "properties": {
                "uri": "static/calendarServices.html"
            }
        },
        {
            "id": "calendar-notification-event",
            "type": "ms.vss-notifications.event-type",
            "description": "Calendar event source for sprints/iterations.",
            "targets": [
                "ms.vss-extmgmt-web.extensions-event-publisher",
                "ms.vss-extmgmt-web.extensions-event-category"
            ],
            "properties": {
                "name": "Calendar event updated",
                "description": "Triggered when a Team Calendar event is updated (created, modified, or deleted).",
                "customSubscriptionsAllowed": true,
                "hasInitiator": true,
                "icon": "bowtie-calendar",
                "supportedScopes": [ 
                    "project", 
                    "collection"
                ],
                "roles": [
                    {
                        "id": "initiator",
                        "name": "Initiator"
                    },
                    {
                        "id": "team",
                        "name": "Team"
                    }
                ]
            }
        },
        {
            "id": "calendar-event-email-template",
            "type": "ms.vss-notifications.email-template",
            "targets": [
                ".calendar-notification-event"
            ],
            "includes": [
                "ms.vss-notifications.standard-email-template"
            ],
            "properties": {
                "sourceTemplate": "ms.vss-notifications.standard-email-template",
                "inputs": {
                    "email-subject": "Team Calendar event {{{ event.action }}}: {{{ event.calendarEvent.title }}}",
                    "summary": "{{ event.calendarEvent.member.displayName }} {{ event.action }} calendar event {{ event.calendarEvent.title }}",
                    "hero": {
                        "title": "\"{{ event.calendarEvent.title }}\" {{ event.action }} by {{ event.calendarEvent.member.displayName }}",
                        "message": "{{#if event.calendarEvent.description}}<p>Description: {{ event.calendarEvent.description }}</p>{{/if}}<p>Start Date: {{event.calendarEvent.startDate}}</p><p>End Date: {{event.calendarEvent.endDate}}</p>",
                        "action": {
                            "title": "Open team calendar",
                            "url": "{{{ event.links.eventPage }}}"
                        }
                    }
                }
            }
        },
        {
            "id": "calendar-event-updated-subscription",
            "type": "ms.vss-notifications.subscription",
            "targets": [
                "ms.vss-notifications.default-subscription-collection"
            ],
            "properties": {
                "description": "A team calendar event was modified",
                "filter": {
                    "type": "Actor",
                    "eventType": "ms-devlabs.team-calendar.calendar-notification-event",
                    "inclusions": [ "team" ],
                    "exclusions": [ "initiator" ],
                    "criteria": {}
                }
            }
        }
    ],
    "contributionTypes": [
        {
            "id": "calendar-event-source-collection",
            "name": "Calendar event source collection",
            "description": "A collection of calendar event sources."
        },
        {
            "id": "calendar-event-source",
            "name": "Calendar event source",
            "description": "A provider of calendar events.",
            "properties": {
                "uri": {
                    "description": "URI to the (background/hidden) HTML content which registers the calendar event source object.",
                    "type": "string",
                    "required": true
                }
            }
        }
    ]
}